<%= form_for [refinery, :social_networks_admin, @social_network] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @social_network,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :profile_url -%>
    <%= f.text_field :profile_url  -%>

  </div>
  
  <div class='field'>
    <%= f.label :icon -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :icon_id,
               :image => @social_network.icon,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.social_networks.admin.social_networks.social_network'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @social_network.name) %>
<% end -%>
