<% content_for :body_content_title do %>
  <%= @social_network.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @social_network.name %>
    </p>
  </section>
  <section>
    <h1>Profile Url</h1>
    <p>
      <%=raw @social_network.profile_url %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%= image_fu @social_network.icon, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="social_networks">
      <% @social_networks.each do |social_network| %>
        <li>
          <%= link_to social_network.name, refinery.social_networks_social_network_path(social_network) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
