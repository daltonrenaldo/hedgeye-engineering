<% content_for :body_content_title do %>
  <h3><%= @event.title %></h3>
<% end %>

<% content_for :body do %>
<section class="two-thirds sidebar right-bar column alpha" style="padding-right:10px">
  <section>
    <p>
      <ul class="small-font">
        <li>Date: <span class="hedgeye-blue"><%=raw @event.date.strftime("%m/%d/%Y") %></span></li>
        <li>Time: <span class="hedgeye-blue"><%=raw @event.date.strftime("%I:%M%p") %></span></li>
        <li>Address: <a href="http://maps.google.com/maps?q=<%=@event.full_address%>"><span class="hedgeye-blue">
          <%=raw @event.address %>,
          <%=raw @event.city %>,
          <%=raw @event.state %>,
          <%=raw @event.zip %>
        </span></a></li>
      </ul>
    </p>
  </section>
  <section>
    <%= image_fu @event.photo, '600x150#c', {:class => 'resize-mobile'} %>
  </section>
  <section>
    <h4>Description</h4>
    <p>
      <%=raw @event.description %>
    </p>
  </section>
</section>
<% end %>

<% content_for :side_body do %>
  <section class="one-third column omega">
    <h3><%= t('.other') %></h3>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= render '/refinery/content_page' %>
