<% content_for :body_content_title do %>
  <%= @slide.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @slide.title %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @slide.image, nil %>
    </p>
  </section>
  <section>
    <h1>Caption</h1>
    <p>
      <%=raw @slide.caption %>
    </p>
  </section>
  <section>
    <h1>Post Slug</h1>
    <p>
      <%=raw @slide.post_slug %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="slides">
      <% @slides.each do |slide| %>
        <li>
          <%= link_to slide.title, refinery.slides_slide_path(slide) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
