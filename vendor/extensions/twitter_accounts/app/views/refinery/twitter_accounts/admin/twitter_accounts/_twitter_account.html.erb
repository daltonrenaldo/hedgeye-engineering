<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(twitter_account) -%>">
  <span class='title'>
    <%= twitter_account.username %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.twitter_accounts_twitter_account_path(twitter_account),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_twitter_accounts_admin_twitter_account_path(twitter_account),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.twitter_accounts_admin_twitter_account_path(twitter_account),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => twitter_account.username),
        :method => :delete %>
  </span>
</li>
