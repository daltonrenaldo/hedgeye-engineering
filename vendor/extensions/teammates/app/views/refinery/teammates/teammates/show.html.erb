<% content_for :body_content_title do %>
  <h3 class="hedgeye-blue"><%=raw @teammate.title %></h3>
<% end %>

<% content_for :body do %>
  <section id="teammate" class="two-thirds right-bar column alpha" style="padding-right:10px">
    <%= fetch_teammate_picture(@teammate) %>
    <ul>
      <li><%= raw @teammate.name %></li>
      <li><%= raw @teammate.email %></li>
      <li><%= raw @teammate.bio %></li>
    </ul>
  </section>
<% end %>

<% content_for :side_body do %>
  <section class="one-third column omega">
    <h3><%= t('.other') %></h3>
    <ul id="teammates">
      <% @teammates.each do |teammate| %>
        <li>
          <%= link_to teammate.title, refinery.teammates_teammate_path(teammate) %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<style type="text/css">
</style>
<%= render '/refinery/content_page' %>
