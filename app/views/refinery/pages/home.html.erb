<% content_for :stylesheets do -%>
  <%= stylesheet_link_tag 'nivo-slider/nivo-slider' %>
  <%= stylesheet_link_tag 'nivo-slider/theme/light' %>
<% end -%>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "jquery.nivo.slider.js" %>
  <script type="text/javascript">
    $(window).load(function() {
      $('#slider').nivoSlider();
    });
  </script>
<% end %>

<% if fetch_slides %>
  <div class="slider-wrapper theme-light">
    <div id="slider" class="slider nivoSlider">
      <% @slides.each do |slide| %>
        <%= image_fu slide.image, '960x290#c', {:title => slide.caption, :class => 'slide'} %>
      <% end %> 
    </div>
  </div>
  <div class="clearfix"></div>
<% else %>
  <div style="padding: 20px;"></div>
<% end %>
